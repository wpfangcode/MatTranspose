#include <iostream>
using namespace std;
class MAT
{
	int col;
	int row;
	int** cell;
public:
	void setSize(int r, int c)
	{
		col = c;
		row = r;
		cell = new int* [row];
		for (int i = 0; i < row; i++)
			cell[i] = new int[col];

	}
	void set(int x, int y, int val)
	{
		cell[x][y] = val;
	}
	void show()
	{
		int i, j;
		for (i = 0; i < row; i++)
		{
			for (j = 0; j < col; j++)
				cout << cell[i][j] << "\t";
			cout << endl;
		}
	}
	void transposeshow()
	{
		int i, j;
		for (j = 0; j < col; j++)
		{
			for (i = 0; i < row; i++)
				cout << cell[i][j] << "\t";
			cout << endl;
		}
	}
	void free()
	{
		int i;
		for (i = 0; i < row; i++)
			delete[] cell[i];
		delete[] cell;
		cell = 0;
		col = 0;
		row = 0;
	}
	void transpose()
	{
		int** twoDimensionArray = new int* [col]; //儲存指標(行->列)的陣列
		for (int i = 0; i < col; i++) //給每個指標一個陣列
			twoDimensionArray[i] = new int[row]; //前者陣列(列)的每一項都創造一個新的陣列(行)
		for (int i = 0; i < col; i++)
			for (int j = 0; j < row; j++)
				twoDimensionArray[i][j] = cell[j][i]; //矩陣轉制公式

		for (int i = 0; i < row; i++) //動態記憶體宣告需刪除記憶體
			delete[]cell[i];
		delete[] cell;

		int trans = row;
		row = col;
		col = trans;
		setSize(row, col);
		cell = twoDimensionArray;
	}
};
class App
{
public:
	void run()
	{
		MAT A;
		A.setSize(3, 2);
		A.set(0, 0, 5);
		A.set(0, 1, 9);
		A.set(1, 0, 6);
		A.set(1, 1, 8);
		A.set(2, 0, 7);
		A.set(2, 1, 11);
		A.show();
		cout << "-----------------" << endl;
		A.transpose();
		A.show();
		A.free();
	}
};
int main()
{
	App app;
	app.run();
}
